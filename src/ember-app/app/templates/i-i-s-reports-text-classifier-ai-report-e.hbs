<h3 class="ui header">{{t "forms.i-i-s-reports-text-classifier-ai-report-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-reports-text-classifier-ai-report-e.reportFile-caption"}}</label>
    {{flexberry-file
      readonly=readonly
      value=model.reportFile
      class=(if (v-get validationModel "reportFile" "isInvalid") "error")
      label=(t "forms.i-i-s-reports-text-classifier-ai-report-e.reportFile-caption")
      data-test-i-i-s-reports-text-classifier-ai-report-e-reportFile=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "reportFile" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-reports-text-classifier-ai-report-e.reportType-caption"}}</label>
    {{flexberry-lookup
      choose="showLookupDialog"
      remove="removeLookupValue"
      value=model.reportType
      displayAttributeName="typeId"
      relationName="reportType"
      projection="ReportTypeL"
      title=(t "forms.i-i-s-reports-text-classifier-ai-report-e.reportType-caption")
      readonly=readonly
      componentName="reportTypeLookup"
      class=(if (v-get validationModel "reportType" "isInvalid") "error")
      data-test-i-i-s-reports-text-classifier-ai-report-e-reportType=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "reportType" "message")}}
  </div>
</form>
